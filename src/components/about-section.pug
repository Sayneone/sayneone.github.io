section.about-section
	.container
		.about-section__face
			.about-section__face-foto
				+image('content/about-section/me.jpg','about-section__foto-img')
			.about-section__face-data
				table
					- var data = [['Проживаю:', 'Воронеж'],['Возраст:', '23 года'],['Родился:', '21 декабря 1995']];
					each row in data
						tr
							td #{row[0]}
							td #{row[1]}
