.list-nav
    width 880px
    &__title
        height 60px
        width 280px
        background-color $color_likeWhite
        text-transform uppercase
        display inline-block
        color $color_darkGray	
        font-family SourceSansPro-Bold
        font-size 22px	font-weight bold
        line-height 28px
        padding 16px 20px
        text-align left
        margin-bottom 10px
    &__list
        display flex
        flex-direction column
    .item a
        color $color_lilGray
        text-transform uppercase
        font-size 18px	
        line-height 60px
        margin-bottom 25px
        &:hover
            color $color_smallRiff
            transition 0.3s