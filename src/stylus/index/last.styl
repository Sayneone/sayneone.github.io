.last-sec
    margin-bottom 134px
    .container
        display flex
    &__form
        width 783px
        border-top 1px solid#E6E6E6
        margin-right 20px
        padding-top 34px
        & > h6 
            margin-bottom 26px
        .form__group
            display flex
            flex-direction row
            justify-content space-between
            
        .form__suptitle
            color #3B4858
            font-size 16px	
            line-height 20px
            font-weight normal
            margin-bottom 6px
            &:after
                content ' *'
                color red
        .form__label
            height 269px
            &-textarea
                width 100%
                height 269px
                margin-bottom 40px
                textarea 
                    height 269px
                    width 100%
            &-name
                width 379px
                input 
                    height 40px
                    width inherit
            &-email
                width 375px
                input 
                    height 40px
                    width 375px
        .form__btn
            display flex
            flex-direction column
            margin-top 30px
            button
                margin-top 40px
                width 175px

