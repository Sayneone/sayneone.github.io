mixin ui__color-block(color)
    .ui__color-block(style='width: 40px; height: 40px; background-color: ' + color)

mixin listing-sec__item(url, title, author, desc, time)
    li.listing-sec__item
        .listing-sec__item-img
            img(src= url)
            .listing-sec__item-img-time= time
        .listing-sec__item-title=  title
        .listing-sec__item-author= author
        .listing-sec__item-desc= desc

mixin tabs-sec__item(url, title, author, desc)
    li.tabs-sec__item
        .tabs-sec__item-img
            img(src= url)
        .tabs-sec__item-title=  title
        .tabs-sec__item-author= author


- var listSecCategories = [{name : 'category 1' },{ name : 'category 2' },{ name : 'category 3' },{ name : 'category 4' },{ name : 'category 5' }]
mixin list-sec__nav(title)
    aside.list-sec__nav
        h5.nav__title= title
        ul.nav__list
        for i in listSecCategories
            li.list__item
                a(href='#')= i.name

mixin showcase__item(url, title, starsQuantity, desk, price)
    li.item
        .item__img
            img(src= url)
        .item__info
            a.title(href='#')= title
            .rating
                ul.rating__stars
                    each index in [1,2,3,4,5]
                        if index < starsQuantity + 1
                            li.star.rated
                        else 
                            li.star
            span.desc= desk
            span.price= price
            button.btn.btn--a Add to cart
            
                    